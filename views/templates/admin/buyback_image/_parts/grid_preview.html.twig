<section id="buyback-form-img-preview" class="card container p-0 m-0 mt-2 hidden">
    <header class="card-header">
        <h3 class="d-inline-block card-header-title">
            <i class="material-icons">image</i>
            {{ 'Preview images' | trans }}
        </h3>
    </header>
    <article class="container pr-4 pb-3 pl-4">
        <section class="row mt-3 ml-0">
            <article class="ad-bb-img-preview-content col-sm-2 mt-3 hidden">
                <div class="form-group text-center">
                    <button class="ad-bb-img-preview-btn p-0 border-0 rounded w-100" type="button">
                        <figure class="m-0">
                            <img class="img-thumbnail p-3 border-bottom-0" data-toggle="pstooltip" data-placement="top"
                                 src="" alt="" data-original-title="{{ 'Click for preview' | trans }}"
                            >
                            <figcaption class="border rounded-bottom">
                                <h5 class="ad-bb-img-preview-title m-1"></h5>
                            </figcaption>
                        </figure>
                    </button>
                </div>
            </article>
        </section>
    </article>
</section>
