<section id="buyback-form-img-preview" class="form-group row hidden">
    <label class="form-control-label required" for="buy_back_image_image">
        {{ 'Image preview' | trans }}
    </label>
    <section class="col-sm">
        <article class="ad-bb-img-preview-content hidden">
            <article class="form-group text-center m-0">
                <button class="ad-bb-img-preview-btn p-0 border-0 rounded w-100">
                    <figure class="m-0">
                        <img class="img-thumbnail p-3 w-100 border-bottom-0" src="" alt="">
                        <figcaption class="border rounded-bottom">
                            <h5 class="ad-bb-img-preview-title m-1"></h5>
                        </figcaption>
                    </figure>
                </button>
            </article>
        </article>
    </section>
</section>
