{% trans_default_domain 'Modules.Adbuyback.Admin' %}

<aside class="ad-bb-admin-chat-actions d-flex align-items-center">
    <a href="{{ url('admin_ad_buyback_edit', {'buybackId': chat['id_ad_buyback']}) }}"
       class="btn tooltip-link p-0 mr-2" data-toggle="pstooltip" data-placement="bottom"
       data-original-title="{{ 'View buyback' | trans }}"
    >
        <i class="material-icons m-0">description</i>
    </a>
    <a href="{{ url('admin_ad_buyback_chat_edit', {'chatId': chat['id_ad_buyback_chat']}) }}"
       class="btn tooltip-link p-0 mr-2" data-toggle="pstooltip" data-placement="bottom"
       data-original-title="{{ 'Edit chat' | trans }}"
    >
        <i class="material-icons m-0">edit</i>
    </a>
    <a href="{{ url('admin_ad_buyback_message_index', {'chatId': chat['id_ad_buyback_chat']}) }}"
       class="btn tooltip-link p-0 mr-2" data-toggle="pstooltip" data-placement="bottom"
       data-original-title="{{ 'View all messages' | trans }}"
    >
        <i class="material-icons m-0">list</i>
    </a>
    <span class="d-inline-block mr-2" data-toggle="pstooltip" data-placement="bottom"
          data-original-title="{{ 'Active chat' | trans }}"
          style="width: 60px; overflow: hidden;"
    >
        <div class="ps-switch ps-switch-sm" data-toggle-url="{{ url('admin_ad_buyback_chat_active', {'chatId': chat['id_ad_buyback_chat']}) }}">
            <input type="radio" name="chat-active" id="chat-input-false-active" value="0"
                   {% if chat['active'] == '0' %}checked{% endif %}
            >
            <label for="chat-input-false-active">Off</label>
            <input type="radio" name="chat-active" id="chat-input-true-active" value="1"
                   {% if chat['active'] %}checked{% endif %}
            >
            <label for="chat-input-true-active">On</label>
            <span class="slide-button"></span>
        </div>
    </span>
    <a href="#" data-method="POST" class="ad-bb-admin-chat-actions-delete btn tooltip-link p-0" data-toggle="pstooltip" data-placement="bottom"
       data-original-title="{{ 'Delete chat' | trans }}"
       data-confirm-message="{{ 'Are you sure you want to delete this chat ?' | trans }}"
       data-url="{{ url('admin_ad_buyback_chat_delete', {'chatId': chat['id_ad_buyback_chat']}) }}"
       data-title="{{ 'Delete chat' | trans }}"
       data-confirm-button-label="{{ 'Delete' | trans }}"
       data-confirm-button-class="btn-danger"
       data-close-button-label="{{ 'Close' | trans }}"
    >
        <i class="material-icons m-0">delete</i>
    </a>
</aside>
